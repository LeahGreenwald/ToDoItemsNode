<div class="row">
    <div class="col-md-8 offset-md-2">
        <a href="/people/newitem" class="btn btn-success">New Item</a>
        <br />
        <table class="table table-hover table-striped table-bordered">
            <tr>
                <th>Title</th>
                <th>Category Name</th>
                <th>Due Date</th>
                <th>Mark as Completed</th>
            </tr>


            <% for (let i=0; i < toDoItems.length; i++)) { %>
                <tr class="<%(item.IsOverdue ? " table-danger": "" )%>">
                    <td>
                        <%= toDoItems[i].Title %>
                    </td>
                    <td>
                        <%= toDoItems[i].CategoryName %>
                    </td>
                    <td>
                        <%= toDoItems[i]..DueDate.ToShortDateString() %>
                    </td>
                    <td>
                    <td> <a href='/people/markascompleted?id=<%= people[i].Id %>' class='btn btn-warning'>Edit</a></td>
                </tr>

                <%}%>
        </table>
    </div>
</div>